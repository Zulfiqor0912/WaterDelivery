<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/login_logo"
        android:layout_width="210dp"
        android:layout_height="166dp"
        android:src="@drawable/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <LinearLayout
        android:id="@+id/login_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login_text1"
            style="@style/montserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="Hush kelibsiz"
            android:textColor="#585858"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/montserrat_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iltimos, ma'lumotlaringizni kiriting"
            android:textColor="#585858"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login_text2"
            style="@style/montserrat_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28sp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginVertical="10dp"
            android:autofillHints="emailAddress"
            android:background="@drawable/bg_edit_text_login"
            android:hint="Emailni kiriting"
            android:paddingVertical="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="4dp"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login_text3"
            style="@style/montserrat_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18sp"
            android:text="Parol"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginVertical="10dp"
            android:autofillHints="password"
            android:background="@drawable/bg_edit_text_login"
            android:hint="Emailni kiriting"
            android:paddingVertical="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="4dp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#0DCEDA"
                app:buttonTint="#0DCEDA" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/montserrat_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:text="Parolni eslab qolish"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_next"
            style="@style/montserrat_bold"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_next"
            android:elevation="8dp"
            android:shadowColor="#A1E9FF"
            android:text="Kirish"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>